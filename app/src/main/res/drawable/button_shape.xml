<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"/>

    <gradient
        android:angle="45"
        android:endColor="#ea68c1"
        android:centerColor="#ea60bf"
        android:startColor="#f57fd0"/>

    <size
        android:width="100dp"
        android:height="20dp"/>
    <padding
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:top="2dp"/>

    <stroke
        android:width="2dp"
        android:color="#fc2999"/>

</shape>