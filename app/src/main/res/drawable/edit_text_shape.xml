    <corners
        android:topLeftRadius="20dp"
        android:topRightRadius="20dp"
        android:bottomLeftRadius="20dp"
        android:bottomRightRadius="20dp"/>

    <gradient
        android:angle="45"
        android:endColor="#FFF"
        android:startColor="#FFF"/>

    <size
        android:width="100dp"
        android:height="20dp"/>
    <padding
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp"
        android:top="2dp"/>

    <stroke
        android:width="2dp"
        android:color="#ea0fa5"/>

</shape>